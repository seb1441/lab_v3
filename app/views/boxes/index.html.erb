<p id="notice"><%= notice %></p>

<section class="flex justify-center align-middle flex-wrap">
  <div class="pl-5 pb-5 pt-1 text-white bg-red-500 m-2 w-96 flex flex-col justify-between" data-controller="boxes">
    <div class="flex align-bottom flex-wrap justify-end mr-2">
      <a href="#" data-action="click->boxes#createBox" class="m-1" ><i class="fas fa-save"></i></a>
    </div>
    <div contenteditable data-target="boxes.boxName" class="mt-1 mr-5 mb-1 font-bold border-red-400 border-2"></div>
    <div contenteditable data-target="boxes.noteContent" class="mr-5 h-full border-red-400 border-2"></div>
  </div>
  <% @boxes.each do |box| %>
    <div class="pl-5 pb-5 pt-1 text-white bg-red-500 m-2 w-96 flex flex-col justify-between" data-controller="boxes">
      <div class="flex align-bottom flex-wrap justify-end mr-2">
        <a href="#" data-reflex="click->BoxesReflex#delete_box" data-id="<%= box.id %>%" ><i class="fas fa-times"></i></a>
      </div>
      <div contenteditable data-action="input->boxes#updateBoxName" data-id="<%= box.id %>" data-target="boxes.boxName" class="mt-1 mr-5 mb-1 font-bold <%= "border-red-400 border-2" if box.name.blank? %>"><%= box.name %></div>
      <div contenteditable data-action="input->boxes#updateNoteContent" data-id="<%= box.boxable.id %>" data-target="boxes.noteContent" class="mr-5 h-full <%= "border-red-400 border-2" if box.boxable.content.blank? %>"><%= box.boxable.content %></div>
    </div>
  <% end %>
</section>
