<p id="notice"><%= notice %></p>

<section class="flex justify-center align-middle flex-wrap">
  <% @boxes.each do |box| %>
    <div class="p-10 text-white bg-red-500 m-2 w-96" data-controller="boxes">
      <div contenteditable data-action="input->boxes#updateBoxName" data-id="<%= box.id %>" data-target="boxes.boxName" class="font-bold mb-1 <%= "border-red-400 border-2" if box.name.blank? %>"><%= box.name %></div>
      <div contenteditable data-action="input->boxes#updateNoteContent" data-id="<%= box.boxable.id %>" data-target="boxes.noteContent" class="<%= "border-red-400 border-2" if box.boxable.content.blank? %>"><%= box.boxable.content %></div>
    </div>
  <% end %>
</section>

<br>

